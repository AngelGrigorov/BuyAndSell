<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Buy&Sell{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Fira+Sans:300i,400,400i,500,600,700,800,900"
              rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/slicknav.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/owl.theme.default.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/animate.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/magnific-popup.css') }}">

        <!-- Xman CSS -->
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
    <header id="header" class="header">
        <div class="header-inner">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="logo">
                            <a href="{{ path('index') }}"><i class="fa fa-shopping-bag fa-3x"></i><h4>Buy&Sell</h4></a>

                        </div>
                    </div>
                    <div class="col-md-9 col-sm-8 col-xs-12">
                        <div class="mobile-menu"></div>
                        <nav class="navbar navbar-default">
                            <div class="collapse navbar-collapse">
                                <ul id='nav' class="nav navbar-nav">
                                    {% if app.user and app.getUser().isAdmin() %}
                                    <li>
                                        <a href="{{ path('all_reports') }}">Admin Issues</a>
                                    </li>
                                    {% endif%}
                                     {% if app.user %}
                                        <li>
                                            <a href="{{ path('my_ads') }}">
                                                My Posts
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('user_profile') }}">
                                                My Profile
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('ad_create') }}">
                                                Post Ad
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('security_logout') }}">
                                                Logout
                                            </a>
                                        </li>
                                    {% else %}
                                        <li>
                                            <a href="{{ path('user_register') }}">
                                                REGISTER
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('security_login') }}">
                                                LOGIN
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Header Inner -->
    </header>
{% endblock %}
<br/>
<div class="container body-container">
    {% block body %}

        <div id="main" class="col-sm-12">
            {% block main %}{% endblock %}
        </div>

    {% endblock %}
</div>

{% block footer %}
    <footer>
        <div>

            <button type="button" class="btn btn-dark"> <a href="{{ path('report_create') }}">Report</a></button>


        </div>
        <div class="container modal-footer">
            <p>&copy; 2019 - Footer</p>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/jquery.nav.js') }}"></script>
    <script src="{{ asset('js/jquery.slicknav.min.js') }}"></script>
    <script src="{{ asset('js/easing.min.js') }}"></script>
    <script src="{{ asset('js/jquery-appear.js') }}"></script>
    <script src="{{ asset('js/jquery.scrollUp.min.js') }}"></script>
    <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
    <script src="{{ asset('js/jquery.counterup.min.js') }}"></script>
    <script src="{{ asset('js/isotope.pkgd.min.js') }}"></script>
    <script src="{{ asset('js/wow.min.js') }}"></script>
    <script src="{{ asset('js/jquery.magnific-popup.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    <script type="text/javascript"
            src="http://maps.google.com/maps/api/js?key=AIzaSyC0RqLa90WDfoJedoE3Z_Gy7a7o8PCL2jw"></script>
    <script type="text/javascript" src="{{ asset('js/gmaps.min.js') }}"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.3/waypoints.min.js"></script>
{% endblock %}

</body>
</html>
