{% extends 'base.html.twig' %}
{% block main %}
    <section id="contact" class="contact section">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-12 col-xs-12 ">
                    <div class="form-head">
                        <form class="form"  enctype="multipart/form-data" action="{{ path('ad_create') }}" method="POST">
                            <legend>New Ad</legend>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Product Name"
                                       name="ad[title]" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Location"
                                       name="ad[location]" required>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" placeholder="More Information"
                                          name="ad[info]" required></textarea>
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="Price in Euro"
                                       name="ad[price]" required>
                            </div>
                            <div class="form-group">
                                <input type="file" accept=".jpg, .jpeg, .png" class="form-control" placeholder="Img"
                                       name="ad[img]" required>
                            </div>
                            {{ form_row(form._token) }}
                            <div class="form-group">
                                <div class="button">
                                    <a class="btn btn-default" href="{{ path('blog_index') }}">Back</a>
                                    <button type="submit" class="btn primary">Post</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
