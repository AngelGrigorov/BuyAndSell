{% extends 'base.html.twig' %}
{% block main %}
    <section id="contact" class="contact section">
        <div class="container">
            <div class="row">
                <ul id='error'>
                    {% for error in errors %}
                        <div class="alert alert-danger">
                            {{ error.message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                </ul>
                <div class="col-md-8 col-sm-12 col-xs-12 ">
                    <div class="form-head">
                        <form class="form"  enctype="multipart/form-data" action="{{ path('ad_create') }}" method="POST">
                            <legend>Нова обява</legend>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Име на продукта"
                                       name="ad[title]" >
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Местонахождение"
                                       name="ad[location]" >
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Повече информация"
                                          name="ad[info]" ></textarea>
                            </div>
                            <div class="form-group">
                                <input type="number"  class="form-control" placeholder="Цена в лева"
                                       name="ad[price]">
                            </div>
                            <div class="form-group">
                                <input type="file" accept=".jpg, .jpeg, .png" class="form-control" placeholder="Изображение"
                                       name="ad[img]" >
                            </div>
                            {{ form_row(form._token) }}
                            <div class="form-group">
                                <div class="button">
                                    <a class="btn btn-default" href="{{ path('index') }}">Назад</a>
                                    <button type="submit" class="btn primary">Публикувай</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
