{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('ad_edit', {id: ad.id}) }}" method="POST">
                <fieldset>
                    <legend>Редактирай обява</legend>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Име на продукта"
                                   name="ad[title]" value="{{ ad.title }}">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Местонахождение"
                                   name="ad[location]" value="{{ ad.location }}">
                        </div>
                        <div class="form-group">
                                <input class="form-control" placeholder="Повече информация"
                                          name="ad[info]" value="{{ ad.info }}">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" placeholder="Цена в лева"
                                   name="ad[price]" value="{{ ad.price }}">
                        </div>
                        <div class="form-group">
                            <input type="file" accept=".jpg, .jpeg, .png" class="form-control" placeholder="Изображение"
                                   name="ad[img]" value="{{ ad.img }}" >
                        </div>


                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('ad_view', {id: ad.id}) }}">Отказ</a>
                            <button type="submit" class="btn btn-success">Редактирай</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

