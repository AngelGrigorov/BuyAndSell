{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('ad_edit', {id: ad.id}) }}" method="POST">
                <fieldset>
                    <legend>Edit Post</legend>

                        <legend>New Ad</legend>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Product Name"
                                   name="ad[title]" value="{{ ad.title }}">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Location"
                                   name="ad[location]" value="{{ ad.location }}">
                        </div>
                        <div class="form-group">
                                <textarea class="form-control" placeholder="More Information"
                                          name="ad[info]" value="{{ ad.info }}"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" placeholder="Price in Euro"
                                   name="ad[price]" value="{{ ad.price }}">
                        </div>
                        <div class="form-group">
                            <input type="file" accept=".jpg, .jpeg, .png" class="form-control" placeholder="Img"
                                   name="ad[img]" value="{{ ad.img }}">
                        </div>


                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('ad_view', {id: ad.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-success">Edit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

