{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('ad_delete', {id: ad.id}) }}" method="POST">
                <fieldset>
                    <legend>Искаш ли да изтриеш обявата ?</legend>


                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('ad_view', {id: ad.id}) }}">Отказ</a>
                            <button type="submit" class="btn btn-danger">Изтрий</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

