{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('ad_delete', {id: ad.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete Post</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_title">Post Title</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="ad_title" placeholder="Post Title"
                                   name="ad[title]" value="{{ ad.title }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_content">Content</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="ad_content"
                                  name="ad[content]" disabled>{{ ad.content }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('ad_view', {id: ad.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

