{% extends 'base.html.twig' %}


{% block main %}
    <section id="skill"  class="skill section">
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-sm-12 col-xs-12">
                    <div class="section-title">
                        <h2>Моят <span>Профил</span></h2>
                    </div>
                </div>
                <div class="col-md-10 col-sm-12 col-xs-12">
