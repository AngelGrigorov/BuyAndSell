{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block main %}
    <section id="contact" class="contact section">
        <div class="container">
            <div class="row">
                <ul id='error'>
                    {% if mail %}
                    <div class="alert alert-danger">
                        {{ mail }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {% endif %}
                    {% for error in errors %}
                        <div class="alert alert-danger">
                            {{ error.message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                </ul>
                <div class="col-md-8 col-sm-12 col-xs-12 ">
                    <div class="form-head">
                        <form class="form" action="{{ path('user_register') }}" method="post">
                            <legend>Регистрация</legend>

                            <div class="form-group">
                                <input name="user[email]" id="user_email" placeholder="Въведи имейл" type="email"
                                        >
                            </div>

                            <div class="form-group">
                                <input type="text" class="form-control" id="user_fullName" placeholder="Въведи име"
                                       name="user[fullName]" >
                    </div>
                            <div class="form-group">
                                <input type="number" pattern="^[0-9]" min="0" class="form-control" placeholder="Въведи номер"
                                       name="user[number]" >
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="user_password_first"
                                       placeholder="Въведи парола" name="user[password]" >
                            </div>
                            <div class="form-group">
                                <div class="button">
                                    <button type="submit" class="btn primary">Регистрирай се</button>
                                </div>
                            </div>
                            {{ form_row(form._token) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
