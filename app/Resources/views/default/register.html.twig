{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block main %}
    <section id="contact" class="contact section">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-12 col-xs-12 ">
                    <div class="form-head">
                        <form class="form" action="{{ path('user_register') }}" method="post">
                            <legend>Register Form</legend>
                            <div class="form-group">
                                <input name="user[email]" id="user_email" placeholder="Enter email" required
                                       type="email">
                            </div>

                            <div class="form-group">
                                <input type="text" class="form-control" id="user_fullName" placeholder="Userame"
                                       name="user[fullName]" required>
                    </div>
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="Phone number"
                                       name="user[number]" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="user_password_first"
                                       placeholder="Password" name="user[password][first]" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="user_password_second"
                                       placeholder="Confirm Password" name="user[password][second]" required>
                            </div>
                            <div class="form-group">
                                <div class="button">
                                    <button type="submit" class="btn primary">Register</button>
                                </div>
                            </div>
                            {{ form_row(form._token) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
